<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".the_twin_binding.HomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/dp12"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pp1"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@drawable/img_friend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="Daniel Aquaries Pratama"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp1"
                app:layout_constraintStart_toEndOf="@+id/iv_pp1"
                app:layout_constraintTop_toTopOf="@+id/iv_pp1"
                app:layout_constraintVertical_bias="0.35" />

            <TextView
                android:id="@+id/tv_school1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="SMKN 11 SEMARANG"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp1"
                app:layout_constraintStart_toEndOf="@+id/iv_pp1"
                app:layout_constraintTop_toTopOf="@+id/iv_pp1"
                app:layout_constraintVertical_bias="0.65" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/dp12"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pp2"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@drawable/icon_friend_app_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="Leo Antrifosa"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp2"
                app:layout_constraintStart_toEndOf="@+id/iv_pp2"
                app:layout_constraintTop_toTopOf="@+id/iv_pp2"
                app:layout_constraintVertical_bias="0.35" />

            <TextView
                android:id="@+id/tv_school2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="SMKN 07 SEMARANG"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp2"
                app:layout_constraintStart_toEndOf="@+id/iv_pp2"
                app:layout_constraintTop_toTopOf="@+id/iv_pp2"
                app:layout_constraintVertical_bias="0.65" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/dp12"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pp3"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@drawable/icon_friend_app_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="Leaffanya Valdava"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp3"
                app:layout_constraintStart_toEndOf="@+id/iv_pp3"
                app:layout_constraintTop_toTopOf="@+id/iv_pp3"
                app:layout_constraintVertical_bias="0.35" />

            <TextView
                android:id="@+id/tv_school3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12"
                android:text="SMKN 11 SEMARANG"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pp3"
                app:layout_constraintStart_toEndOf="@+id/iv_pp3"
                app:layout_constraintTop_toTopOf="@+id/iv_pp3"
                app:layout_constraintVertical_bias="0.65" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>